                               FontFamily="{StaticResource AppFont}" FontSize="15"
                               Foreground="#CCCCCC" HorizontalAlignment="Center" Margin="0,0,0,24"/>

                    <!-- Barre de recherche -->

                    <Border Background="White" CornerRadius="16"  Padding="20,16" Width="900"  Height="150">
                        <StackPanel>
                            <!-- Ligne 1 : Personnes + Type -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Personnes -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ðŸ‘¥ Nombre de personnes" FontFamily="{StaticResource AppFont}"
                                               FontSize="11" Foreground="#888888" Margin="0,0,0,4"/>
                                    <Border Background="#F5F5F5" CornerRadius="8" Padding="10,7">
                                        <TextBox x:Name="TxtPersonnes" FontFamily="{StaticResource AppFont}"
                                                 FontSize="13" BorderThickness="0" Background="Transparent"
                                                 Foreground="#333333" CaretBrush="#333333"
                                                 Tag="ex: 20" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"
                                                 Text="ex: 20"/>
                                    </Border>
                                </StackPanel>
                                <!-- Type de salle -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="ðŸ›ï¸ Type de salle" FontFamily="{StaticResource AppFont}"
                                               FontSize="11" Foreground="#888888" Margin="0,0,0,4"/>
                                    <Border Background="#F5F5F5" CornerRadius="8" Padding="4,4">
                                        <ComboBox x:Name="CmbType" FontFamily="{StaticResource AppFont}"
                                                  FontSize="13" BorderThickness="0" Background="Transparent">
                                            <ComboBoxItem Content="Tous les types" IsSelected="True"/>
                                            <ComboBoxItem Content="Salle de rÃ©union"/>
                                            <ComboBoxItem Content="Salle de cours"/>
                                            <ComboBoxItem Content="AmphithÃ©Ã¢tre"/>
                                        </ComboBox>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            <!-- Ligne 2 : Ã‰quipements -->
                            <StackPanel Margin="0,0,0,12">
                                
 
                            </StackPanel>
                            <!-- Bouton -->
                            <Button Content="ðŸ”  Rechercher" Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Right" Padding="20,11"  Margin="-20" FontSize="14"
                                    Click="BtnRechercher_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Grille 12 salles -->
            <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="20,20,0,0"
                    Margin="0,-16,0,0" Padding="30,30,30,40">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Nos salles disponibles" FontFamily="{StaticResource AppFont}"
                                   FontSize="22" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="TxtResultats" FontFamily="{StaticResource AppFont}"
                                   FontSize="14" Foreground="#AAAAAA" VerticalAlignment="Bottom"
                                   Margin="12,0,0,2"/>
                    </StackPanel>
                    <WrapPanel x:Name="SallesPanel" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
